<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TaskAppSample" parent="android:Theme.Material.Light.NoActionBar" >

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>

        <!--Custom Font-->
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:textAppearance">@style/DefaultTextAppearance</item>

        <item name="emptyStateImage">@drawable/empty_state_light</item>
    </style>

    <style name="TextColorSecondary">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <!--Setting default Font for the whole App-->
    <style name="TextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAppearance">@style/DefaultTextAppearance</item>
    </style>

    <style name="DefaultTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/space_grotesk_regular</item>
        <item name="fontFamily">@font/space_grotesk_regular</item>
    </style>

</resources>